
@model IEnumerable<ZeroHunger42915.Models.Employee>

<div style="text-align: center;">
    <table align="center" style="width: 100%;">
        <tr>
            <th>Employee ID</th>
            <th>Full Name</th>
            <th>Mobile No</th>
        </tr>

        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeID</td>
                <td>@employee.FullName</td>
                <td>@employee.MobileNo</td>
                <td>
                    <form method="post" action="@Url.Action("DeleteEmployee", "Admin")">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="employeeId" value="@employee.EmployeeID" />
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete @employee.FullName?')" />
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
